{% extends 'template/base.html.twig' %}

{% block content %}
    <div class="header-list-page">
        <h1 class="title">Dashboard</h1>
    </div>
    <div class="infor">
        You have {{ total }} products added on this store: <a href="{{ route('product_new') }}" class="btn-action">Add new Product</a>
    </div>
    <ul class="product-list">
        {% for product in products %}
            <li>
                <div class="product-image">
                    <img src="{{ asset('images/product/default.png') }}" layout="responsive" width="164" height="145" alt="{{ product.name }}" />
                </div>
                <div class="product-info">
                    <div class="product-name"><span>{{ product.name }}</span></div>
                    <div class="product-price">
                        <div class="special-price">
                            {{ product.categories|join(', ', ' and ') }}
                        </div>
                        <div class="special-price">{{ product.quantity }} available</div>
                        <span>R$ {{ product.price|number_format(2, ',', '.') }}</span>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}